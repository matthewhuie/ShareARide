<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        tools:context=".MapsActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment">
    </fragment>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/my_location"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="@android:color/white"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="264dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:id="@+id/requestMainLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:id="@+id/requestLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destination"
                android:id="@+id/destination"
                android:layout_alignParentTop="true"
                android:layout_marginTop="40dp"
                android:layout_alignParentStart="true"
                android:elegantTextHeight="false"
                android:capitalize="words"
                android:autoText="false"
                android:textSize="20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="50dp"
                android:enabled="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Riders"
                android:id="@+id/riderNum"
                android:elegantTextHeight="false"
                android:capitalize="words"
                android:autoText="false"
                android:layout_marginTop="15dp"
                android:textSize="20dp"
                android:layout_marginRight="50dp"
                android:enabled="true"
                android:layout_below="@+id/destination"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latest Arrival"
                android:id="@+id/latestArrival"
                android:elegantTextHeight="false"
                android:capitalize="words"
                android:autoText="false"
                android:layout_marginTop="15dp"
                android:textSize="20dp"
                android:layout_marginRight="50dp"
                android:layout_below="@+id/riderNum"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:enabled="true" />

            <edu.cmu.andrew.utilities.CustomAutoCompleteTextView
                android:id="@+id/destiTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/str_atv_places"
                android:layout_marginLeft="150dp"
                android:layout_alignBottom="@+id/destination"
                android:layout_marginRight="10dp"
                android:width="180dp"/>


            <Spinner
                android:id="@+id/riderNumbers"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:dropDownWidth="60dp"
                android:layout_marginLeft="10dp"

                android:layout_alignBottom="@+id/riderNum"
                android:layout_centerHorizontal="true" />

            <TimePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/timePicker"
                android:layout_alignTop="@+id/riderNum"
                android:layout_marginLeft="150dp"
                android:timePickerMode="spinner"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/request"
                android:id="@+id/rqstBtn"
                android:width="70dp"
                android:layout_below="@+id/latestArrival"
                android:onClick="selectDriver"
                android:layout_marginTop="15dp" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>